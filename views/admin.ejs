  <div class="container-fluid">
    <div class="row">
      <div class="description-box col-12">
        <div class="card">
        <div class="card-body">
          <h3>All posts</h3>
          <% posts.forEach(function(post){ %>
            <p><%= post.title %><a class="delete" href="/delete/<%= post._id %>">Delete</a></p>
          <% }) %>
          <hr />
          <a class="btn btn-primary" href="/compose" role="button">Compose</a>
          <a class="btn btn-danger" href="/logout" role="button">Logout</a>
        </div>
      </div>
      </div>
    </div>
  </div>
</section>
